<% provide :title, "Edit user" %>
<div class="page-header">
  <h1>Edit user <small>it's as easy as 1, 2, 3.</small></h1>
</div>
<p>
  <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>
    <%= f.label :name %>
    <%= f.text_field :name, {placeholder: 'Enter username...', class: 'span3'}%>
    <%= f.label :email %>
    <%= f.text_field :email, {placeholder: 'Enter email...', class: 'span3'} %>
    <%= f.label :password %>
    <%= f.password_field :password, {class: 'span3'} %>
    <%= f.label :password_confirmation, "Confirm Password" %>
    <%= f.password_field :password_confirmation, {class: 'span3'} %>    
    <p><%= button_tag "Update", {class: 'btn btn-primary'}%></p>
  <% end %>  
</p>

<div>
  <%= gravatar_for(@user) %>
  <a href="http://gravatar.com/emails">change</a>
</div>