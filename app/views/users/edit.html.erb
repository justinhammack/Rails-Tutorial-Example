<% provide :title, "Edit user" %>
<div class="page-header">
  <h1>Edit user <small>it's as easy as 1, 2, 3.</small></h1>
</div>
<p>
  <%= form_for(@user) do |f| %>
    <%= render 'fields', f: f %>
    <p><%= button_tag "Update", {class: 'btn btn-primary'}%></p>
  <% end %>  
</p>

<div>
  <%= gravatar_for(@user) %>
  <a href="http://gravatar.com/emails">change</a>
</div>